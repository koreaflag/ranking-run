# ============================================================
# RunCrew Backend — Environment Variables
# Copy to .env and fill in actual values
# ============================================================

# Application
APP_NAME=RunCrew
APP_ENV=development          # development | staging | production
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://runcrew:runcrew_password@localhost:5432/runcrew
DATABASE_ECHO=false

# JWT — MUST CHANGE IN PRODUCTION (use a strong random secret)
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# OAuth — Apple
APPLE_BUNDLE_ID=app.runcrew
APPLE_TEAM_ID=

# OAuth — Google
GOOGLE_CLIENT_ID=

# Strava
STRAVA_CLIENT_ID=
STRAVA_CLIENT_SECRET=
STRAVA_REDIRECT_URI=

# OpenWeatherMap
OPENWEATHER_API_KEY=

# Mapbox (for course thumbnail generation)
MAPBOX_ACCESS_TOKEN=

# File Upload (local storage)
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=5

# S3 Storage (optional — falls back to local if not configured)
S3_BUCKET_NAME=
S3_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
CDN_BASE_URL=               # e.g. https://cdn.runcrew.app

# Firebase Cloud Messaging (push notifications)
FCM_SERVICE_ACCOUNT_PATH=   # Path to Firebase service account JSON

# Sentry (error tracking)
SENTRY_DSN=

# Logging
JSON_LOGS=false              # true in production for structured logging

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8081"]

# Server
HOST=0.0.0.0
PORT=8000

# Docker Compose (used by docker-compose.yml)
POSTGRES_DB=runcrew
POSTGRES_USER=runcrew
POSTGRES_PASSWORD=runcrew_password
